{
  "manifest_version": 3,
  "name": "Mobar - Transcription",
  "description": "Transcreve automaticamente as legendas do Google Meet e permite salvar o texto.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mobar - Transcription"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
